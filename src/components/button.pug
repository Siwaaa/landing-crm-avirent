mixin button(title, size="m", type="button", href, color="orange", flareEffect, imgPath)
  if type!="link"
    button(type=type, class=`btn btn-${color} btn-${size}`)&attributes(attributes)= title
      if imgPath 
        img(src=imgPath)
      else if flareEffect
        .flare
  else
    a(href=href target="_blank" class=`btn btn-${color} btn-${size}`)= title 
      if imgPath 
        img(src=imgPath)
      else if flareEffect
        .flare